{
	"include": [
		"**/*",
		"**/.server/**/*",
		"**/.client/**/*",
		".react-router/types/**/*",
		"declarations.d.ts"
	],
	"compilerOptions": {
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES2022"
		],
		"types": [
			"node",
			"vite/client",
			"@emotion/react"
		],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"rootDirs": [
			".",
			"./.react-router/types"
		],
		"baseUrl": ".",
		"paths": {
			"@components/*": [
				"app/components/*"
			],
			"@modules/*": [
				"app/modules/*"
			],
			"@theme/*": [
				"app/theme/*"
			],
			"@store/*": [
				"app/store/*"
			],
			"@mocks/*": [
				"app/mocks/*"
			],
			"~/*": [
				"./app/*"
			],
		},
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true
	}
}